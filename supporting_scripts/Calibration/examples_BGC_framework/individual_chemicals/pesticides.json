{
  "_DESCRIPTION": "Pesticide Fate and Transport - Degradation, sorption, volatilization",
  "_REFERENCE": "PRZM, PELMO, Mackay (2001) Multimedia Fate Models",
  "_VERSION": "1.0",

  "BIOGEOCHEMISTRY_CONFIGURATION": {
    "CHEMICAL_SPECIES": {
      "PEST_diss": {
        "DESCRIPTION": "Dissolved pesticide in water",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 1.0
      },
      "PEST_part": {
        "DESCRIPTION": "Pesticide sorbed to particles",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 0.5
      },
      "PEST_DOC": {
        "DESCRIPTION": "Pesticide bound to DOC",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 0.2
      },
      "METAB_1": {
        "DESCRIPTION": "Primary metabolite",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 0.1
      },
      "METAB_2": {
        "DESCRIPTION": "Secondary metabolite",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 0.0
      },
      "DOC": {
        "DESCRIPTION": "Dissolved organic carbon",
        "UNITS": "mg/L",
        "INITIAL_CONDITION": 5.0
      },
      "TSS": {
        "DESCRIPTION": "Total suspended solids",
        "UNITS": "mg/L",
        "INITIAL_CONDITION": 20.0
      }
    },

    "CYCLING_FRAMEWORKS": {
      "PESTICIDE_FATE": {
        "_DESCRIPTION": "Complete pesticide fate model",

        "HYDROLYSIS": {
          "CONSUMED": "PEST_diss",
          "PRODUCED": "METAB_1",
          "KINETICS": "k_hyd * PEST_diss * 10^(pH - 7)",
          "PARAMETERS": {
            "k_hyd": {
              "VALUE": 0.01,
              "UNITS": "1/day",
              "RANGE": [0.0, 0.5],
              "DESCRIPTION": "Base hydrolysis rate at pH 7"
            },
            "pH": {
              "VALUE": 7.5,
              "DESCRIPTION": "Water pH"
            }
          },
          "NOTES": "Many pesticides have pH-dependent hydrolysis"
        },

        "PHOTOLYSIS": {
          "CONSUMED": "PEST_diss",
          "PRODUCED": "METAB_1",
          "KINETICS": "k_photo * PEST_diss * I_avg / I_ref * exp(-k_ext * depth / 2)",
          "PARAMETERS": {
            "k_photo": {
              "VALUE": 0.1,
              "UNITS": "1/day",
              "RANGE": [0.0, 2.0],
              "DESCRIPTION": "Photolysis rate at reference irradiance"
            },
            "I_avg": {
              "VALUE": 300,
              "UNITS": "W/m2",
              "DESCRIPTION": "Surface irradiance"
            },
            "I_ref": {
              "VALUE": 300,
              "UNITS": "W/m2",
              "DESCRIPTION": "Reference irradiance"
            },
            "k_ext": {
              "VALUE": 2.0,
              "UNITS": "1/m",
              "DESCRIPTION": "Light extinction coefficient"
            },
            "depth": {"VALUE": 1.0, "UNITS": "m"}
          }
        },

        "BIODEGRADATION_AEROBIC": {
          "CONSUMED": "PEST_diss",
          "PRODUCED": "METAB_1",
          "KINETICS": "k_bio * PEST_diss * (DO / (K_O2 + DO)) * 1.07^(T - 20)",
          "PARAMETERS": {
            "k_bio": {
              "VALUE": 0.05,
              "UNITS": "1/day",
              "RANGE": [0.001, 0.5],
              "DESCRIPTION": "Aerobic biodegradation rate at 20C"
            },
            "K_O2": {
              "VALUE": 0.5,
              "UNITS": "mg/L",
              "DESCRIPTION": "Half-saturation for O2"
            },
            "DO": {"VALUE": 8.0, "UNITS": "mg/L"}
          }
        },

        "BIODEGRADATION_ANAEROBIC": {
          "CONSUMED": "PEST_diss",
          "PRODUCED": "METAB_1",
          "KINETICS": "k_bio_an * PEST_diss * (K_O2_inhib / (K_O2_inhib + DO)) * 1.05^(T - 20)",
          "PARAMETERS": {
            "k_bio_an": {
              "VALUE": 0.01,
              "UNITS": "1/day",
              "RANGE": [0.0, 0.1],
              "DESCRIPTION": "Anaerobic biodegradation rate"
            },
            "K_O2_inhib": {"VALUE": 0.5, "UNITS": "mg/L"},
            "DO": {"VALUE": 8.0, "UNITS": "mg/L"}
          },
          "NOTES": "Some pesticides degrade faster under anoxic conditions"
        },

        "SORPTION_PARTICLES": {
          "CONSUMED": "PEST_diss",
          "PRODUCED": "PEST_part",
          "KINETICS": "k_ads * PEST_diss * TSS / 1000",
          "PARAMETERS": {
            "k_ads": {
              "VALUE": 0.5,
              "UNITS": "L/mg/day",
              "RANGE": [0.01, 5.0],
              "DESCRIPTION": "Adsorption rate to particles"
            }
          }
        },

        "DESORPTION_PARTICLES": {
          "CONSUMED": "PEST_part",
          "PRODUCED": "PEST_diss",
          "KINETICS": "k_des * PEST_part",
          "PARAMETERS": {
            "k_des": {
              "VALUE": 0.1,
              "UNITS": "1/day",
              "RANGE": [0.01, 1.0],
              "DESCRIPTION": "Desorption rate"
            }
          }
        },

        "SORPTION_DOC": {
          "CONSUMED": "PEST_diss",
          "PRODUCED": "PEST_DOC",
          "KINETICS": "k_DOC * PEST_diss * DOC",
          "PARAMETERS": {
            "k_DOC": {
              "VALUE": 0.1,
              "UNITS": "L/mg/day",
              "RANGE": [0.01, 1.0],
              "DESCRIPTION": "DOC binding rate"
            }
          },
          "NOTES": "DOC-bound fraction is mobile but not bioavailable"
        },

        "DESORPTION_DOC": {
          "CONSUMED": "PEST_DOC",
          "PRODUCED": "PEST_diss",
          "KINETICS": "k_des_DOC * PEST_DOC",
          "PARAMETERS": {
            "k_des_DOC": {
              "VALUE": 0.2,
              "UNITS": "1/day"
            }
          }
        },

        "VOLATILIZATION": {
          "CONSUMED": "PEST_diss",
          "PRODUCED": "PEST_atm_loss",
          "KINETICS": "k_vol * PEST_diss",
          "PARAMETERS": {
            "k_vol": {
              "VALUE": 0.01,
              "UNITS": "1/day",
              "RANGE": [0.0, 0.5],
              "DESCRIPTION": "Volatilization rate (Henry's law dependent)"
            }
          },
          "NOTES": "k_vol = K_L * A / V where K_L is overall mass transfer coeff"
        },

        "SETTLING": {
          "CONSUMED": "PEST_part",
          "PRODUCED": "SED_PEST",
          "KINETICS": "v_s / depth * PEST_part",
          "PARAMETERS": {
            "v_s": {
              "VALUE": 1.0,
              "UNITS": "m/day",
              "DESCRIPTION": "Particle settling velocity"
            },
            "depth": {"VALUE": 2.0, "UNITS": "m"}
          }
        },

        "METAB1_DEGRADATION": {
          "CONSUMED": "METAB_1",
          "PRODUCED": "METAB_2",
          "KINETICS": "k_deg_M1 * METAB_1 * 1.07^(T - 20)",
          "PARAMETERS": {
            "k_deg_M1": {
              "VALUE": 0.1,
              "UNITS": "1/day",
              "RANGE": [0.01, 0.5],
              "DESCRIPTION": "Primary metabolite degradation rate"
            }
          }
        },

        "METAB2_MINERALIZATION": {
          "CONSUMED": "METAB_2",
          "PRODUCED": "CO2_loss",
          "KINETICS": "k_min_M2 * METAB_2 * 1.07^(T - 20)",
          "PARAMETERS": {
            "k_min_M2": {
              "VALUE": 0.2,
              "UNITS": "1/day",
              "RANGE": [0.05, 1.0],
              "DESCRIPTION": "Final mineralization rate"
            }
          }
        }
      },

      "COMMON_PESTICIDES": {
        "_DESCRIPTION": "Parameter sets for specific pesticides",

        "ATRAZINE": {
          "k_hyd": 0.0001,
          "k_photo": 0.002,
          "k_bio": 0.007,
          "Koc": 100,
          "DT50_water": 80,
          "DT50_soil": 60,
          "NOTES": "Triazine herbicide; persistent"
        },

        "GLYPHOSATE": {
          "k_hyd": 0.0,
          "k_photo": 0.01,
          "k_bio": 0.05,
          "Koc": 24000,
          "DT50_water": 7,
          "DT50_soil": 15,
          "NOTES": "Highly sorbed; relatively short half-life"
        },

        "CHLORPYRIFOS": {
          "k_hyd": 0.02,
          "k_photo": 0.05,
          "k_bio": 0.03,
          "Koc": 8500,
          "DT50_water": 25,
          "DT50_soil": 30,
          "NOTES": "Organophosphate insecticide"
        },

        "IMIDACLOPRID": {
          "k_hyd": 0.0003,
          "k_photo": 0.2,
          "k_bio": 0.01,
          "Koc": 225,
          "DT50_water": 30,
          "DT50_soil": 180,
          "NOTES": "Neonicotinoid; photo-labile"
        },

        "METOLACHLOR": {
          "k_hyd": 0.0001,
          "k_photo": 0.01,
          "k_bio": 0.02,
          "Koc": 200,
          "DT50_water": 26,
          "DT50_soil": 20,
          "NOTES": "Chloroacetanilide herbicide"
        },

        "DIAZINON": {
          "k_hyd": 0.07,
          "k_photo": 0.1,
          "k_bio": 0.05,
          "Koc": 1000,
          "DT50_water": 12,
          "DT50_soil": 40,
          "NOTES": "pH-dependent hydrolysis"
        },

        "DDT": {
          "k_hyd": 0.0001,
          "k_photo": 0.0,
          "k_bio": 0.001,
          "Koc": 150000,
          "DT50_water": 1000,
          "DT50_soil": 3000,
          "NOTES": "Legacy pollutant; extremely persistent"
        }
      },

      "PARTITIONING_FORMULAS": {
        "_DESCRIPTION": "Equilibrium partitioning calculations",

        "KD_FROM_KOC": {
          "FORMULA": "Kd = Koc * foc",
          "NOTES": "foc = fraction organic carbon in solids"
        },

        "FRACTION_DISSOLVED": {
          "FORMULA": "f_diss = 1 / (1 + Kd * TSS/1000 + K_DOC * DOC)",
          "NOTES": "Accounts for particle and DOC binding"
        },

        "HENRY_LAW": {
          "FORMULA": "k_vol = K_L * A / V = K_L / depth",
          "NOTES": "K_L depends on wind speed and chemical properties"
        },

        "DT50_TO_K": {
          "FORMULA": "k = ln(2) / DT50 = 0.693 / DT50",
          "NOTES": "Convert half-life to first-order rate"
        }
      }
    },

    "COMPARTMENT_ASSIGNMENT": {
      "RIVER": ["PESTICIDE_FATE"],
      "LAKE": ["PESTICIDE_FATE"],
      "SOIL": ["PESTICIDE_FATE"],
      "GROUNDWATER": ["PESTICIDE_FATE"]
    }
  }
}
