{
  "_DESCRIPTION": "Anaerobic Ammonium Oxidation (Anammox) with Thermodynamic Control",
  "_REFERENCE": "Jin & Bethke (2007); Strous et al. (1999)",
  "_REACTION": "NH4+ + NO2- -> N2 + 2 H2O",
  "_DELTA_G0": "-357 kJ/mol (highly exergonic)",
  "_IMPORTANCE": "Major pathway for N removal in anoxic marine environments",

  "MODULE_NAME": "NATIVE_BGC_FLEX",

  "CHEMICAL_SPECIES": {
    "list": {
      "1": "NH4_N",
      "2": "NO2_N",
      "3": "N2_loss",
      "4": "DO",
      "5": "X_anammox"
    },
    "BGC_GENERAL_MOBILE_SPECIES": ["NH4_N", "NO2_N"]
  },

  "CYCLING_FRAMEWORKS": {
    "ANAMMOX_THERMO": {
      "list_transformations": {
        "1": "anammox",
        "2": "anammox_growth",
        "3": "anammox_decay"
      },

      "_THERMODYNAMIC_CONSTANTS": {
        "deltaG0": -357.0,
        "deltaG_ATP": 45.0,
        "chi": 2,
        "R_kJ": 0.008314,
        "NOTES": [
          "Anammox is highly exergonic (ΔG° = -357 kJ/mol)",
          "F_T ≈ 1.0 under all conditions",
          "Strict anaerobes - completely inhibited by O2",
          "Very slow growing organisms (doubling time ~11 days)",
          "Important in oxygen minimum zones (OMZ) and sediments"
        ]
      },

      "1": {
        "_name": "anammox",
        "_description": "Anaerobic oxidation of NH4+ using NO2- as electron acceptor",
        "_reaction": "NH4+ + NO2- -> N2 + 2 H2O",
        "consumed": "NH4_N",
        "produced": "N2_loss",
        "kinetics": [
          "k_anmx * X_anammox * (NH4_N/(Km_NH4+NH4_N)) * (NO2_N/(Km_NO2+NO2_N)) * (Ki_O2/(Ki_O2+DO)) * (1 - exp(-((357-45)/(2*0.008314*(T+273)))))",
          "mg-N/L/day"
        ],
        "parameter_names": ["k_anmx", "Km_NH4", "Km_NO2", "Ki_O2"],
        "parameter_values": {
          "k_anmx": 2.0,
          "Km_NH4": 0.1,
          "Km_NO2": 0.05,
          "Ki_O2": 0.01
        },
        "_notes": [
          "Very low k_anmx reflects slow anammox growth",
          "Very low Ki_O2 - strict anaerobe",
          "Requires both NH4 and NO2 - often coupled with partial nitrification"
        ]
      },

      "2": {
        "_name": "anammox_growth",
        "consumed": "NH4_N",
        "produced": "X_anammox",
        "kinetics": [
          "Y_anmx * k_anmx * X_anammox * (NH4_N/(Km_NH4+NH4_N)) * (NO2_N/(Km_NO2+NO2_N)) * (Ki_O2/(Ki_O2+DO)) * (1 - exp(-((357-45)/(2*0.008314*(T+273)))))",
          "mg/L/day"
        ],
        "parameter_names": ["Y_anmx", "k_anmx", "Km_NH4", "Km_NO2", "Ki_O2"],
        "parameter_values": {
          "Y_anmx": 0.11,
          "k_anmx": 2.0,
          "Km_NH4": 0.1,
          "Km_NO2": 0.05,
          "Ki_O2": 0.01
        },
        "_notes": "Low yield - autotrophic metabolism"
      },

      "3": {
        "_name": "anammox_decay",
        "consumed": "X_anammox",
        "produced": "NH4_N",
        "kinetics": ["k_decay * X_anammox", "mg/L/day"],
        "parameter_names": ["k_decay"],
        "parameter_values": {"k_decay": 0.01},
        "_notes": "Very low decay rate - slow turnover organisms"
      }
    }
  },

  "_USE_CASES": [
    "Oxygen minimum zones (OMZ) in oceans",
    "Anoxic sediments with NO2 supply from incomplete denitrification",
    "Wastewater treatment (DEMON, SHARON-Anammox processes)",
    "Stratified lakes with anoxic hypolimnion"
  ]
}
