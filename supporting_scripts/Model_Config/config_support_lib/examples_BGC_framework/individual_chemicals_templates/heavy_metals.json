{
  "_DESCRIPTION": "Heavy Metals Cycling - Cu, Zn, Pb, Cd, Hg with sorption and speciation",
  "_REFERENCE": "WASP TOXI, Stumm & Morgan (1996)",
  "_VERSION": "1.0",

  "BIOGEOCHEMISTRY_CONFIGURATION": {
    "CHEMICAL_SPECIES": {
      "Cu_diss": {
        "DESCRIPTION": "Dissolved copper",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 5.0
      },
      "Cu_part": {
        "DESCRIPTION": "Particulate copper",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 10.0
      },
      "Zn_diss": {
        "DESCRIPTION": "Dissolved zinc",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 20.0
      },
      "Zn_part": {
        "DESCRIPTION": "Particulate zinc",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 30.0
      },
      "Pb_diss": {
        "DESCRIPTION": "Dissolved lead",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 1.0
      },
      "Pb_part": {
        "DESCRIPTION": "Particulate lead",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 5.0
      },
      "Cd_diss": {
        "DESCRIPTION": "Dissolved cadmium",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 0.5
      },
      "Cd_part": {
        "DESCRIPTION": "Particulate cadmium",
        "UNITS": "ug/L",
        "INITIAL_CONDITION": 1.0
      },
      "Hg_diss": {
        "DESCRIPTION": "Dissolved inorganic mercury",
        "UNITS": "ng/L",
        "INITIAL_CONDITION": 1.0
      },
      "Hg_part": {
        "DESCRIPTION": "Particulate mercury",
        "UNITS": "ng/L",
        "INITIAL_CONDITION": 2.0
      },
      "MeHg": {
        "DESCRIPTION": "Methylmercury",
        "UNITS": "ng/L",
        "INITIAL_CONDITION": 0.1
      },
      "TSS": {
        "DESCRIPTION": "Total suspended solids",
        "UNITS": "mg/L",
        "INITIAL_CONDITION": 20.0
      },
      "DOC": {
        "DESCRIPTION": "Dissolved organic carbon (complexation)",
        "UNITS": "mg/L",
        "INITIAL_CONDITION": 5.0
      }
    },

    "CYCLING_FRAMEWORKS": {
      "COPPER_CYCLE": {
        "_DESCRIPTION": "Copper partitioning and transport",

        "CU_SORPTION": {
          "CONSUMED": "Cu_diss",
          "PRODUCED": "Cu_part",
          "KINETICS": "k_ads_Cu * Cu_diss * TSS / 1000",
          "PARAMETERS": {
            "k_ads_Cu": {
              "VALUE": 1.0,
              "UNITS": "L/mg/day",
              "RANGE": [0.1, 10.0],
              "DESCRIPTION": "Cu adsorption rate"
            }
          }
        },

        "CU_DESORPTION": {
          "CONSUMED": "Cu_part",
          "PRODUCED": "Cu_diss",
          "KINETICS": "k_des_Cu * Cu_part",
          "PARAMETERS": {
            "k_des_Cu": {
              "VALUE": 0.1,
              "UNITS": "1/day",
              "RANGE": [0.01, 1.0],
              "DESCRIPTION": "Cu desorption rate"
            }
          }
        },

        "CU_SETTLING": {
          "CONSUMED": "Cu_part",
          "PRODUCED": "SED_Cu_loss",
          "KINETICS": "v_s / depth * Cu_part",
          "PARAMETERS": {
            "v_s": {"VALUE": 1.0, "UNITS": "m/day"},
            "depth": {"VALUE": 2.0, "UNITS": "m"}
          }
        }
      },

      "ZINC_CYCLE": {
        "_DESCRIPTION": "Zinc partitioning",

        "ZN_SORPTION": {
          "CONSUMED": "Zn_diss",
          "PRODUCED": "Zn_part",
          "KINETICS": "k_ads_Zn * Zn_diss * TSS / 1000",
          "PARAMETERS": {
            "k_ads_Zn": {
              "VALUE": 0.5,
              "UNITS": "L/mg/day",
              "RANGE": [0.05, 5.0],
              "DESCRIPTION": "Zn adsorption rate (lower affinity than Cu)"
            }
          }
        },

        "ZN_DESORPTION": {
          "CONSUMED": "Zn_part",
          "PRODUCED": "Zn_diss",
          "KINETICS": "k_des_Zn * Zn_part",
          "PARAMETERS": {
            "k_des_Zn": {"VALUE": 0.2, "UNITS": "1/day"}
          }
        },

        "ZN_SETTLING": {
          "CONSUMED": "Zn_part",
          "PRODUCED": "SED_Zn_loss",
          "KINETICS": "v_s / depth * Zn_part",
          "PARAMETERS": {
            "v_s": {"VALUE": 1.0, "UNITS": "m/day"},
            "depth": {"VALUE": 2.0, "UNITS": "m"}
          }
        }
      },

      "LEAD_CYCLE": {
        "_DESCRIPTION": "Lead partitioning (strongly sorbed)",

        "PB_SORPTION": {
          "CONSUMED": "Pb_diss",
          "PRODUCED": "Pb_part",
          "KINETICS": "k_ads_Pb * Pb_diss * TSS / 1000",
          "PARAMETERS": {
            "k_ads_Pb": {
              "VALUE": 5.0,
              "UNITS": "L/mg/day",
              "RANGE": [1.0, 20.0],
              "DESCRIPTION": "Pb adsorption rate (high affinity)"
            }
          }
        },

        "PB_DESORPTION": {
          "CONSUMED": "Pb_part",
          "PRODUCED": "Pb_diss",
          "KINETICS": "k_des_Pb * Pb_part",
          "PARAMETERS": {
            "k_des_Pb": {
              "VALUE": 0.02,
              "UNITS": "1/day",
              "DESCRIPTION": "Pb desorption (very slow)"
            }
          }
        },

        "PB_SETTLING": {
          "CONSUMED": "Pb_part",
          "PRODUCED": "SED_Pb_loss",
          "KINETICS": "v_s / depth * Pb_part",
          "PARAMETERS": {
            "v_s": {"VALUE": 1.0, "UNITS": "m/day"},
            "depth": {"VALUE": 2.0, "UNITS": "m"}
          }
        }
      },

      "CADMIUM_CYCLE": {
        "_DESCRIPTION": "Cadmium partitioning",

        "CD_SORPTION": {
          "CONSUMED": "Cd_diss",
          "PRODUCED": "Cd_part",
          "KINETICS": "k_ads_Cd * Cd_diss * TSS / 1000",
          "PARAMETERS": {
            "k_ads_Cd": {
              "VALUE": 0.8,
              "UNITS": "L/mg/day",
              "RANGE": [0.1, 5.0],
              "DESCRIPTION": "Cd adsorption rate"
            }
          }
        },

        "CD_DESORPTION": {
          "CONSUMED": "Cd_part",
          "PRODUCED": "Cd_diss",
          "KINETICS": "k_des_Cd * Cd_part",
          "PARAMETERS": {
            "k_des_Cd": {"VALUE": 0.15, "UNITS": "1/day"}
          }
        },

        "CD_SETTLING": {
          "CONSUMED": "Cd_part",
          "PRODUCED": "SED_Cd_loss",
          "KINETICS": "v_s / depth * Cd_part",
          "PARAMETERS": {
            "v_s": {"VALUE": 1.0, "UNITS": "m/day"},
            "depth": {"VALUE": 2.0, "UNITS": "m"}
          }
        }
      },

      "MERCURY_CYCLE": {
        "_DESCRIPTION": "Mercury cycling with methylation",

        "HG_SORPTION": {
          "CONSUMED": "Hg_diss",
          "PRODUCED": "Hg_part",
          "KINETICS": "k_ads_Hg * Hg_diss * TSS / 1000",
          "PARAMETERS": {
            "k_ads_Hg": {
              "VALUE": 2.0,
              "UNITS": "L/mg/day",
              "DESCRIPTION": "Hg adsorption rate"
            }
          }
        },

        "HG_DESORPTION": {
          "CONSUMED": "Hg_part",
          "PRODUCED": "Hg_diss",
          "KINETICS": "k_des_Hg * Hg_part",
          "PARAMETERS": {
            "k_des_Hg": {"VALUE": 0.05, "UNITS": "1/day"}
          }
        },

        "HG_METHYLATION": {
          "CONSUMED": "Hg_diss",
          "PRODUCED": "MeHg",
          "KINETICS": "k_meth_Hg * Hg_diss * DOC / (K_DOC + DOC)",
          "PARAMETERS": {
            "k_meth_Hg": {
              "VALUE": 0.01,
              "UNITS": "1/day",
              "RANGE": [0.001, 0.1],
              "DESCRIPTION": "Mercury methylation rate"
            },
            "K_DOC": {
              "VALUE": 2.0,
              "UNITS": "mg/L",
              "DESCRIPTION": "DOC half-saturation for methylation"
            }
          },
          "NOTES": "Methylation enhanced by DOC and anoxia"
        },

        "MEHG_DEMETHYLATION": {
          "CONSUMED": "MeHg",
          "PRODUCED": "Hg_diss",
          "KINETICS": "k_demeth * MeHg",
          "PARAMETERS": {
            "k_demeth": {
              "VALUE": 0.05,
              "UNITS": "1/day",
              "RANGE": [0.01, 0.2],
              "DESCRIPTION": "MeHg demethylation rate"
            }
          }
        },

        "HG_VOLATILIZATION": {
          "CONSUMED": "Hg_diss",
          "PRODUCED": "Hg0_loss",
          "KINETICS": "k_vol_Hg * Hg_diss",
          "PARAMETERS": {
            "k_vol_Hg": {
              "VALUE": 0.001,
              "UNITS": "1/day",
              "DESCRIPTION": "Hg0 evasion rate"
            }
          },
          "NOTES": "Reduction to Hg0 and volatilization"
        },

        "HG_SETTLING": {
          "CONSUMED": "Hg_part",
          "PRODUCED": "SED_Hg_loss",
          "KINETICS": "v_s / depth * Hg_part",
          "PARAMETERS": {
            "v_s": {"VALUE": 1.0, "UNITS": "m/day"},
            "depth": {"VALUE": 2.0, "UNITS": "m"}
          }
        }
      },

      "KD_PARTITIONING": {
        "_DESCRIPTION": "Alternative equilibrium partitioning approach",
        "_NOTES": "Use Kd values instead of kinetic rates for fast equilibration",

        "EQUILIBRIUM_FORMULAS": {
          "Cu_Kd": {
            "VALUE": 50000,
            "UNITS": "L/kg",
            "DESCRIPTION": "Cu distribution coefficient"
          },
          "Zn_Kd": {
            "VALUE": 30000,
            "UNITS": "L/kg",
            "DESCRIPTION": "Zn distribution coefficient"
          },
          "Pb_Kd": {
            "VALUE": 200000,
            "UNITS": "L/kg",
            "DESCRIPTION": "Pb distribution coefficient (strongly sorbed)"
          },
          "Cd_Kd": {
            "VALUE": 40000,
            "UNITS": "L/kg",
            "DESCRIPTION": "Cd distribution coefficient"
          },
          "Hg_Kd": {
            "VALUE": 100000,
            "UNITS": "L/kg",
            "DESCRIPTION": "Hg distribution coefficient"
          }
        },
        "_FORMULA": "f_part = Kd * TSS / (1 + Kd * TSS); f_diss = 1 - f_part"
      }
    },

    "COMPARTMENT_ASSIGNMENT": {
      "RIVER": ["COPPER_CYCLE", "ZINC_CYCLE", "LEAD_CYCLE", "CADMIUM_CYCLE", "MERCURY_CYCLE"],
      "LAKE": ["COPPER_CYCLE", "ZINC_CYCLE", "LEAD_CYCLE", "CADMIUM_CYCLE", "MERCURY_CYCLE"],
      "SEDIMENT": ["COPPER_CYCLE", "ZINC_CYCLE", "LEAD_CYCLE", "CADMIUM_CYCLE", "MERCURY_CYCLE"]
    }
  }
}
