{
  "_DESCRIPTION": "Simple Nitrogen Cycle - Basic NH4/NO3/Org-N transformations",
  "_REFERENCE": "Chapra (2008) Surface Water-Quality Modeling",
  "_VERSION": "1.0",

  "BIOGEOCHEMISTRY_CONFIGURATION": {
    "CHEMICAL_SPECIES": {
      "NH4_N": {
        "DESCRIPTION": "Ammonium nitrogen",
        "UNITS": "mg/L as N",
        "INITIAL_CONDITION": 0.5
      },
      "NO3_N": {
        "DESCRIPTION": "Nitrate nitrogen",
        "UNITS": "mg/L as N",
        "INITIAL_CONDITION": 2.0
      },
      "ORG_N": {
        "DESCRIPTION": "Organic nitrogen (dissolved + particulate)",
        "UNITS": "mg/L as N",
        "INITIAL_CONDITION": 1.0
      }
    },

    "CYCLING_FRAMEWORKS": {
      "SIMPLE_N_CYCLE": {
        "_DESCRIPTION": "Three-pool nitrogen cycle with temperature correction",

        "MINERALIZATION": {
          "CONSUMED": "ORG_N",
          "PRODUCED": "NH4_N",
          "KINETICS": "k_min * ORG_N * 1.08^(T - 20)",
          "PARAMETERS": {
            "k_min": {
              "VALUE": 0.05,
              "UNITS": "1/day",
              "RANGE": [0.02, 0.2],
              "DESCRIPTION": "Organic N mineralization rate at 20C"
            }
          }
        },

        "NITRIFICATION": {
          "CONSUMED": "NH4_N",
          "PRODUCED": "NO3_N",
          "KINETICS": "k_nitrif * NH4_N * 1.08^(T - 20)",
          "PARAMETERS": {
            "k_nitrif": {
              "VALUE": 0.1,
              "UNITS": "1/day",
              "RANGE": [0.01, 0.5],
              "DESCRIPTION": "Nitrification rate at 20C"
            }
          }
        },

        "DENITRIFICATION": {
          "CONSUMED": "NO3_N",
          "PRODUCED": "N2_loss",
          "KINETICS": "k_denitrif * NO3_N * 1.07^(T - 20)",
          "PARAMETERS": {
            "k_denitrif": {
              "VALUE": 0.02,
              "UNITS": "1/day",
              "RANGE": [0.001, 0.1],
              "DESCRIPTION": "Denitrification rate at 20C"
            }
          },
          "NOTES": "N2_loss is a sink (lost to atmosphere)"
        }
      }
    },

    "COMPARTMENT_ASSIGNMENT": {
      "SOIL": ["SIMPLE_N_CYCLE"],
      "RIVER": ["SIMPLE_N_CYCLE"],
      "LAKE": ["SIMPLE_N_CYCLE"]
    }
  }
}
